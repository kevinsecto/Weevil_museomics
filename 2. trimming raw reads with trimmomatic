#!/bin/bash
#This script describes how to trim raw reads using trimmomatic OR fastp in the ASU SOL supercomputer

# Run trimmomatic
trimmomatic PE -threads 12 -phred33 PATH/TO/READ1.fq.gz PATH/TO/READ2.fq.gz OUTPUT/PATH/FOR/TRIMMED/READ1fastq.gz OUTPUT/PATH/FOR/READ1/SINGLETONS.fastq.gz OUTPUT/PATH/FOR/TRIMMED/READ2.fastq.gz OUTPUT/PATH/FOR/READ2/SINGLETONS.fastq.gz

# Or

# Run fastp
fastp --in1 ", PATH/TO/READ1.fq.gz, " --in2 ", PATH/TO/READ2.fq.gz, " --out1 ", OUTPUT/PATH/FOR/TRIMMED/READ1fastq.gz," --out2 ", OUTPUT/PATH/FOR/TRIMMED/READ2.fastq.gz, " --unpaired1 ", OUTPUT/PATH/FOR/READ1/SINGLETONS.fastq.gz, " --unpaired2 ", OUTPUT/PATH/FOR/READ2/SINGLETONS.fastq.gz, " --thread 16 --adapter_sequence=AGATCGGAAGAGCACACGTCTGAACTCCAGTCA --adapter_sequence_r2=AGATCGGAAGAGCGTCGTGTAGGGAAAGAGTGT --dedup 6 --dup_calc_accuracy 6 --html ", htmlrep, sep="") # --detect_adapter_for_pe
